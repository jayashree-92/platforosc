@using HMOSecureWeb.Utility
<!DOCTYPE html>
<html>
<head>
</head>

@{
    var userRole = @Util.GetRole(User).Replace("-", " ").Replace("Hm ", string.Empty);
}
<body ng-app="HmOperationsSecureApp" style="background: #F5F5F5">

    @foreach (var bundle in BundleTable.Bundles.Where(bundle => bundle is StyleBundle))
    {
        @Styles.Render(bundle.Path)
    }
    <meta http-equiv="X-UA-Compatible" content="IE=9">
    <meta charset="utf-8">
    <title> Operations Secured- @ViewBag.Title</title>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href=@Url.Action("Index", "Home")><i class="glyphicon glyphicon-home pull-left"></i>&nbsp;&nbsp;HM Operations Secure&nbsp;@Util.LowerEnvironmentFlag</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
                <ul class="nav navbar-nav navbar-right">

                    @*<li id="liLogs">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Logs <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Wire Logs", "Index", "WireLog")</li>
                                <li>@Html.ActionLink("Inbound MQ Logs", "InboundLogs", "Audit")</li>
                            </ul>
                        </li>*@

                    <li>@Html.ActionLink("Wire Purposes", "WirePurpose", "Home")</li>
                    <li>@Html.ActionLink("Wire Logs", "Index", "WireLog")</li>
                    <li>@Html.ActionLink("User Audits", "Index", "Audit")</li>
                    <li>@Html.ActionLink("MQ Logs", "MqLogs", "Audit")</li>
                    <li style="padding-top: 12px;" title="@User.Identity.Name"><label style="color:inherit;padding: 5px 3px!important;" class="label label-default" href="#"><i class="glyphicon glyphicon-user"></i> @userRole</label></li>
                    <li title="Hangfire Jobs"><a href="/jobs" target="_blank"><i class="glyphicon glyphicon-stats"></i></a></li>
                    <li title="Logout" class="navbar-right"><a id="btnLogOff" class="navbar-icon" href=@Url.Action("LogOff", "Account")><i class="glyphicon glyphicon-log-out"></i></a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid" style="margin-top: 70px; ">
        @RenderSection("featured", required: false)
        @RenderBody()
    </div>
    <div class="notifications top-right" style="z-index: 2000"></div>
    <div class="notifications bottom-right"></div>
    <div class="notifications top-left"></div>
    <div class="notifications bottom-left"></div>
    <div class="notifications center"></div>

    <br />
    <br />
    <footer class="footer">
        <div class="container">
            <p class="text-muted"><small>© @DateTime.Now.Year HedgeMark International, LLC. All rights reserved.</small></p>
        </div>
    </footer>


    @foreach (var bundle in BundleTable.Bundles.Where(bundle => bundle is ScriptBundle))
    {
        @Scripts.Render(bundle.Path)
    }

    @RenderSection("JavaScript", required: false)
    @this.InjectAdditionalScripts()

</body>
</html>
