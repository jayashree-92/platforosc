@model dynamic
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>HM Operations Secure:LogOff</title>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="cache-control" content="max-age=0" />
    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
    <meta http-equiv="pragma" content="no-cache" />
</head>
<body style="overflow-y: hidden;width: 1170px;margin-left:auto;margin-right:auto;margin-top:0;background-color: #e9e9e9;">
    <div style="background: white; height: 10%;">
        <div class="row">
            <a href="/">
                <img src="/images/HedgemarkIcon.png" alt="logo" style="padding:5px 0 0 10px">
            </a>

            <img src="/images/BNY_Mellon_Company.png" alt="logo" style="float:right; padding:20px 10px 0 0">

            <div class="clearfix"></div>
        </div>
    </div>
    <div style="background: #107A83; height: 22%;">
        <br>
        <div style="color:White; font-family:Arial,Helvetica;font-size:small;text-align:center">
            <!-- Display a message after user successfully logged out from the application. -->
            <h2><small>HM OPERATIONS SECURE</small></h2>

            @if (string.IsNullOrWhiteSpace(ViewBag.ReasonString))
            {
                <p>Successfully logged out.</p>
            }
            else
            {
                <p>@ViewBag.ReasonString</p>
            }


            <div style="margin-bottom: 15px;">
                Click <a href="/" style="color:white;text-decoration:underline">here</a> to log in.
            </div>
        </div>
    </div>
</body>
</html>
<script type="text/javascript">

    var storageItemsToRemove = ["hm-ops-secure-session-timeout-local", "hm-ops-secure-total-tabs-opened-local"];

    for (var i = 0; i < storageItemsToRemove.length - 1; i++) {
        localStorage.removeItem(storageItemsToRemove[i]);
    }

</script>

