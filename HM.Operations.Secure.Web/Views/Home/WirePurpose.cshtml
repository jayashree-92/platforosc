@model dynamic

@{
    ViewBag.Title = "title";
}

<legend>Wire Purpose Management</legend>
<div ng-controller="WirePurposeMgmtCtrl">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="btn-group">
                <button ng-disabled="!IsAuthorizedToApprove" class="btn btn-sm btn-success" ng-click="fnModifyWirePurpose(true)">Approve</button>
                <button ng-disabled="!IsAuthorizedToApprove" class="btn btn-sm btn-danger" ng-click="fnModifyWirePurpose(false)">Reject</button>
            </div>
            <button class="btn btn-sm btn-default" data-toggle="modal" data-target="#mdlAddNewPurpose"><i class="glyphicon glyphicon-plus"></i>&nbsp; Add new Purpose</button>
        </div>
        <div class="panel-body">
            <table id="tblWirePurpose" class="table table-striped table-condensed table-hover shadowBox"></table>
        </div>
    </div>

    <div class="modal fade" id="mdlAddNewPurpose" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Add new Purpose</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-4">
                            <label for="selReportName" class="control-label">Report Name:</label>
                        </div>
                        <div class="col-md-8">
                            <select id="selReportName">
                                <option value="Adhoc Report">Adhoc Report</option>
                            </select>
                        </div>
                    </div><p />
                    <div class="row">
                        <div class="col-md-4">
                            <label for="txtPurpose" class="control-label">Purpose</label>
                        </div>
                        <div class="col-md-8 form-inline">
                            <input type="text" ng-model="NewPurpose" class="form-control" style="width: 200px;" id="txtPurpose" />&nbsp;&nbsp;
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-sm btn-primary" ng-click="fnAddNewPurpose()">Add Purpose</button>
                </div>
            </div>
        </div>
    </div>

</div>

@section Javascript{
    <script src="~/Scripts/OpsSecure/WirePurpose.js"></script>
}